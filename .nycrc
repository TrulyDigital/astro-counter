{
  "extends": "@istanbuljs/nyc-config-typescript",
  "reporter": [
    "text",
    "lcov",
    "json"
  ],
  "all": true,
  "check-coverage": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.astro",
    "**/*.test.ts"
  ],
  "exclude": [
    "cypress/**/*",
    "node_modules",
    "coverage/"
  ],
  "report-dir": "/coverage"
}